@model TP_WEB.Models.Personnage

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Voulez-vous vraiment supprimer ce personnage ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            Stats de base totaux
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatsDeBaseTotaux)
        </dd>
        <dt class = "col-sm-2">
           Classes
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LigneClasses)
        </dd>
        <dt class = "col-sm-2">
            Armes utilisées
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LigneArmes)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.LienImage"/>
        </dd>
    </dl>
    
    <form asp-controller="GestionEnfant" asp-action="Delete" method="post">
        <input type="hidden" value="@Model.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
